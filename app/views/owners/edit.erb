<h1>Update Owner</h1>
<form action="/owners/<%=@owner.id%>" method="POST">
  <label>Owner's Name:</label>

  <input type="text" name="owner[name]" id="owner_name" value="<%=@owner.name%>">

  <label>Choose Existing Pet:</label>

  <% Pet.all.each do |pet| %>
    <input type="checkbox" name="owner[pet_ids][]" id="<%= pet.id%>" value="<%= pet.id%>" <%='checked' if @owner.pets.include?(pet) %>>
    <%=pet.name%>
    </input>
  <% end %>


  <label> Create New Pet:</label>
  

  <label>Pet's Name:</label>
  <input type="text" name="pet[name]" id="pet_name"></input>

  <input type="submit" value="Update Owner">
</form>