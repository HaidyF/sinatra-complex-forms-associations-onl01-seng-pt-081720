<h1>Create Pet</h1>

<form action="/pets" method="POST">
  <label>Pet's Name:</label>

  <input type="text" name="pet[name]" id="pet_name">

  <label>Choose Existing Owner:</label>
 
  <% @owners.each do |owner| %>
    <input type="checkbox" name="pet[owner_id]" value="<%=owner.id%>" id="<%=owner.id%>">
    <%=owner.name%>
    </input>
  <% end %>

  <label>Create New Owner:</label>

  <label>Name:</label>
    <input type="text" name="owner[name]" id="owner_name"></input>


  <input type="submit" value="Create Pet">
</form>